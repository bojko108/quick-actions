{
    "name": "quick-actions",
    "productName": "Quick Actions",
    "icon": "./assets/icon.ico",
    "version": "1.0.0",
    "description": "Win app for storing passwords and various shortcuts for quick access from the system tray.",
    "main": "src/index.js",
    "scripts": {
        "start": "electron-forge start",
        "package": "electron-forge package",
        "make": "electron-forge make",
        "publish": "electron-forge publish",
        "lint": "echo \"No linting configured\""
    },
    "keywords": [],
    "author": {
        "name": "bojko108",
        "email": "bojko108@gmail.com"
    },
    "license": "MIT",
    "config": {
        "forge": {
            "packagerConfig": {},
            "makers": [
                {
                    "name": "@rabbitholesyndrome/electron-forge-maker-portable",
                    "config": {
                        "appId": "com.bojkosoft.quickactions",
                        "copyright": "Copyright Â© 2026 ${author.name}",
                        "artifactName": "${productName}-v${version}.exe",
                        "nsis": {
                            "installerIcon": "${icon}"
                        }
                    }
                }
            ]
        }
    },
    "dependencies": {
        "electron-squirrel-startup": "^1.0.1",
        "uuid": "^13.0.0"
    },
    "devDependencies": {
        "@electron-forge/cli": "^7.11.1",
        "@electron-forge/maker-deb": "^7.11.1",
        "@electron-forge/maker-rpm": "^7.11.1",
        "@electron-forge/maker-squirrel": "^7.11.1",
        "@electron-forge/maker-zip": "^7.11.1",
        "@rabbitholesyndrome/electron-forge-maker-portable": "^0.2.0",
        "electron": "40.4.1"
    },
    "packageManager": "yarn@4.6.0+sha512.5383cc12567a95f1d668fbe762dfe0075c595b4bfff433be478dbbe24e05251a8e8c3eb992a986667c1d53b6c3a9c85b8398c35a960587fbd9fa3a0915406728"
}
